<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
    <title></title>
  </head>
  <body>
    <%- include ('../partials/navbar.ejs') %>
    <h1 class="show-title"> <%=task.name%></h1>
    <div id='show-flex-container' class="d-flex flex-column">
      <div class="show-flex-item">
        Engineer: <%=engineer.name%>
      </div>
      <div class="show-flex-item">
        Importance: <%=task.importance%>
      </div>
      <div class="show-flex-item">
        Color: <div class='color' style="background-color:<%=task.color%>;"></div>
      </div>
      <div class="show-flex-item">
        Due Date: <%=task.dueDate%>
      </div>
      <div class="show-flex-item">
        Days Left: <%=getNumOfDaysLeft(task.dueDate)%>
      </div>
      <div class="show-flex-item">
        Description: <%=task.description%>
      </div>
      <div class="show-flex-item">
        Completed:
        <% if (task.completed) { %>
          Yes
        <% } else { %>
          No
        <% } %>
      </div>
    </div>
    <div class="d-flex justify-content-around">
      <form class="show-button" action="/home/<%=task.id%>/edit" method="get">
        <button type="submit" class="btn btn-outline-primary" >Edit</button>
      </form>
      <form class="show-button" action="/home/<%=task.id%>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
    <%- include ('../partials/footer.ejs') %>
  </body>
</html>
